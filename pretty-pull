#!/usr/bin/env bash

function prettify-commits {
    BASE_BRANCH=$1
    FEATURE_BRANCH=$2

    diff_commit_shas=$(git log --pretty="%H" --no-merges $BASE_BRANCH...$FEATURE_BRANCH)

    for commit_sha in $diff_commit_shas
    do
        # Get subject of commit
        echo "## $(git log --pretty="%s" -1 $commit_sha)"
        git log --pretty="%b" -1 $commit_sha

        # # Get the body of a commit
        echo $commit_sha
        echo ---
        echo
    done
}
